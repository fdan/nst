#! /usr/bin/env python

from optparse import OptionParser
import nst


def main():
    p = OptionParser()
    p.add_option("", "--load", dest='load_file', action='store')
    opts, args = p.parse_args()
    style_imager = nst.StyleImager.load(opts.load_file)
    print(style_imager)
    style_imager.write_exr()


if __name__ == "__main__":
    main()