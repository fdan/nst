Bootstrap: docker
From: nvidia/cuda:11.4.2-cudnn8-devel-ubuntu18.04
Stage: spython-base

%post

export LANG=C.UTF-8
export LC_ALL=C.UTF-8
export PATH=/opt/conda/bin:$PATH
export DEBIAN_FRONTEND=noninteractive

apt-get update --fix-missing && apt-get install -y \
    build-essential \
    ca-certificates \
    cmake \
    curl \
    git \
    libglib2.0-0 \
    libjpeg-dev \
    libopencv-dev \
    libopenexr-dev \
    libpng-dev \
    libsm-dev \
    vim \
    wget \
    emacs

# Install Python 3.6
apt-get update && apt-get install -y --no-install-recommends \
        python3-opencv \
        python3-pip \
        python3.6-dev && \
        rm -rf /var/lib/apt/lists/*

# Have aliases python3->python and pip3->pip
ln -s /usr/bin/python3 /usr/bin/python && \
    ln -s /usr/bin/pip3 /usr/bin/pip
python -m pip install --upgrade pip

pip install --no-cache-dir setuptools wheel && \
    pip install --no-cache-dir \
    future \
    gast==0.2.2 \
    protobuf \
    pyyaml==3.13 \
    scikit-image \
    typing \
    imageio \
    OpenEXR

pip install --no-cache-dir torch==1.10.1+cu111 torchvision==0.11.2+cu111 torchaudio==0.10.1 -f https://download.pytorch.org/whl/torch_stable.html
pip install --no-cache-dir cupy-cuda110
pip install --no-cache-dir cython
pip install --no-cache-dir kornia

%environment
export PATH=/mnt/ala/research/danielf/git/nst/bin:$PATH
export PYTHONPATH=/mnt/ala/research/danielf/git/nst/python:$PYTHONPATH
export NST_VGG_MODEL=/mnt/ala/research/danielf/git/nst/bin/Models/vgg_conv.pth

%startscript
conda activate pytorch