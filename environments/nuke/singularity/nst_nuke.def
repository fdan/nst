Bootstrap: docker
From: nvidia/cuda:11.4.2-cudnn8-devel-ubuntu18.04
Stage: spython-base

%post

export LANG=C.UTF-8
export LC_ALL=C.UTF-8
export PATH=/opt/conda/bin:$PATH
export DEBIAN_FRONTEND=noninteractive
export TORCH_CUDA_ARCH_LIST=Ampere

apt-get update --fix-missing && apt-get install -y \
    build-essential \
    python3 \
    ca-certificates \
    cmake \
    curl \
    git \
    protobuf-compiler \
    libglib2.0-0 \
    libjpeg-dev \
    libopencv-dev \
    libopenexr-dev \
    libpng-dev \
    libsm-dev \
    vim \
    wget \
    unzip \
    emacs \
    python3.8-distutils

# Install Python 3.8
apt-get update && apt-get install -y --no-install-recommends \
        python3-pip \
        python3.8-dev && \
        rm -rf /var/lib/apt/lists/*

# Have aliases python3->python and pip3->pip
rm /usr/bin/python3 && \
ln -s /usr/bin/python3.8 /usr/bin/python3 && \
ln -s /usr/bin/python3 /usr/bin/python && \
#ln -s /usr/bin/pip3 /usr/bin/pip

python3.8 -m pip install --upgrade pip

python3.8 -m pip install --no-cache-dir setuptools wheel && \
    
python3.8 -m pip install --no-cache-dir \
    opencv-python \
    future \
    gast==0.2.2 \
    protobuf==3.0.0 \
    pyyaml==3.13 \
    scikit-image \
    typing \
    imageio \
    OpenEXR

python3.8 -m pip install --no-cache-dir torch==2.0.0+cu117 torchvision==0.15.1+cu117 torchaudio==2.0.1+cu117 -f https://download.pytorch.org/whl/torch_stable.html
python3.8 -m pip install --no-cache-dir cupy-cuda11x
python3.8 -m pip install --no-cache-dir cython
python3.8 -m pip install --no-cache-dir kornia
python3.8 -m pip install --no-cache-dir pybind11
python3.8 -m pip install --no-cache-dir ninja
python3.8 -m pip install --no-cache-dir memory_profiler

wget --quiet https://github.com/fdan/NeuralTextureSynthesis/archive/refs/heads/nomedia.zip && \
    unzip nomedia.zip && \
    cd NeuralTextureSynthesis-nomedia && \
    python3.8 setup.py install

%environment
export PATH=/mnt/ala/research/danielf/git/nst/bin:$PATH
export PYTHONPATH=/mnt/ala/research/danielf/git/nst/python:/usr/lib/python3.8/site-packages/histogram-0.0.0-py3.8-linux-x86_64.egg:$PYTHONPATH
export NST_VGG_MODEL=/mnt/ala/research/danielf/git/nst/models/vgg_conv.pth
export LD_LIBRARY_PATH=/usr/local/lib/python3.8/dist-packages/torch/lib

%startscript
conda activate pytorch